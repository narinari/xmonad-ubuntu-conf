[module/touchbrightdown]
;; Brightness down
type=custom/text
content="ÔÜÖÔåâ  "
content-foreground=#fff
click-left=xbacklight -dec 10

[module/touchbrightup]
;; Brightness up
type=custom/text
content="ÔÜÖÔåå    "
content-foreground=#fff
click-left=xbacklight -inc 10

[module/touchkeyboard]
;; Open onscreen keyboard (onboard)
type=custom/text
content="ÔÑú   "
content-foreground=#fff
click-left=onboard

[module/touchvolmute]
;; Mute
type=custom/text
content="ÔÄ¶  "
content-foreground=#fff
click-left=pactl set-sink-mute 0 toggle

[module/touchvoldown]
;; Volume down
type=custom/text
content="ÔÄß  "
content-foreground=#fff
click-left=pactl set-sink-volume 0 -5% 

[module/touchvolup]
;; Volume down
type=custom/text
content="ÔÄ®    "
content-foreground=#fff
click-left=pactl set-sink-volume 0 +5% 

